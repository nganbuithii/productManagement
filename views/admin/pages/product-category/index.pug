extends ../../layout/default.pug
include ../../mixins/filterStatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/formChangeMulti.pug
include ../../mixins/alert.pug
include ../../mixins/sort.pug
block main
    h1 trang danh mục sản phẩm
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body 
            .row
                .col-6
                    +filter-status(filterStatus)
                .col-6
                    +search(keyword)
    .card.mb-3 
        .card-header Sắp xếp
        .card-body 
            .row
                .col-4 
                    //- định nghĩa thuộc tính sort cho div
                    +sort-category()
    .card.mb-3 
        .card-header Danh mục sản phẩm
        .card-body 
            .row 
                .col-8  
                    +form-change-multi(`${prefixAdmin}/products-category/change-multi?_method=PATCH`)
                .col-4
                    a(href=`${prefixAdmin}/products-category/create` class="btn btn-outline-success") + Thêm mới           
    table(class="table table-hover table-sm " checkbox-multi)
                thead 
                    tr 
                        th  
                            input(type="checkbox" name="checkall")
                        th STT 
                        th Hình ảnh 
                        th Tiêu đề
                        th Vị trí
                        th Trạng thái 
                        th Hoạt động 
                tbody 
                    each item, index in records
                        tr 
                            td 
                                input(type="checkbox" name="id" value = item.id)
                            td #{index+1}
                            td 
                                img(
                                    src=item.thumbnail
                                    alt="sp1"
                                    width="100px"
                                    height="auto"
                                )
                            td #{item.title}
                            td #{item.position}
                            td 
                                if(item.status == "active")
                                    a(href="javascript:;" button-change-status data-status=item.status data-id=item.id class="badge badge-success") Hoạt động
                                else 
                                    a(href="javascript:;" button-change-status  data-status=item.status data-id=item.id class="badge badge-danger") Dừng hoạt động
                            td 
                                a(href=`${prefixAdmin}/products-category/detail/${item.id}` class="btn btn-secondary btn-sm ml-1") Xem chi tiết
                                a(href=`${prefixAdmin}/products-category/edit/${item.id}` class="btn btn-warning btn-sm") Sửa
                                button(class="btn btn-danger btn-sm ml-1" button-delete data-id = item.id ) Xóa
    +pagination(pagination)
    form(action="" method="POST" id="form-change-status" data-path= `${prefixAdmin}/products-category/change-status`)

    script(type="application/javascript" src="/admin/js/product-category.js")                       
