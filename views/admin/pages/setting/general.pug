extends ../../layout/default.pug
include ../../mixins/alert.pug

block main 
    h1 Cài đặt chung 

    +alert-error(3000)
    +alert-success(3000)

    form(action=`${prefixAdmin}/settings/general?_method=PATCH` method="POST" enctype="multipart/form-data")
        .form-group 
            label(for = "websiteName") Tên website 
            input(type="text" class="form-control" id="websiteName" name="websiteName" value=(record ? record.websiteName : "" ))
        div(class="form-group" upload-image)
            label(for="logo") Logo
            input(type="file" class="form-control-file" id="logo" name="logo" accept="image/*" upload-image-input)
            img(src=(record ? record.logo : "" ) class="image-preview" upload-image-preview)
        div(class="form-group" )
            label(for="phone") Số điện thoại
            input(type="text" name="phone" id="phone" class="form-control" value=(record ? record.phone : "" ))
        div(class="form-group" )
            label(for="email") Email
            input(type="email" name="email" id="email" class="form-control" value=(record ? record.email: "" ))
        div(class="form-group" )
            label(for="address") Địa chỉ
            input(type="text" name="address" id="address" class="form-control" value=(record ? record.address : "" ))
        div(class="form-group" )
            label(for="copyright") Copyright
            input(type="text" name="copyright" id="copyright" class="form-control" value=(record ? record.copyright : "" ))
        div(class="form-group")
            button(class="btn btn-success" type="submit") Cập nhật