extends ../../layout/default.pug
include ../../mixins/box-head.pug
include ../../mixins/product-layout.pug
include ../../mixins/alert.pug
block main
    +alert-success(3000)
    +alert-error(3000)

    .container.my-5
        .row.justify-content-center
            .col-8
                h1.text-info.text-center Nhập mã OTP xác thực
                form(action="/user/password/otp" method="POST")
                    .form-group 
                        label(for="email") Email:
                        input(type="email" class="form-control" id="email" name="email" required value=email readonly)
                    .form-group 
                        label(for="otp") Mã OTP:
                        input(type="text" class="form-control" id="otp" name="otp" required)
                    .form-group 
                        button(type="submit" class="btn btn-primary btn-block") Xác nhận

        

        